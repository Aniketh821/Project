#include<stdio.h>
int main()
{
	int i,n,sum1=0,sum2=0;
	printf("Enter the number of houses: ");
	scanf("%d",&n);
	int x[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&x[i]);
	}
	for(i=0;i<n;i++)
	{
		if(i%2==0)
		sum1=sum1+x[i];
		else
		sum2=sum2+x[i];
	}
	if(sum1<sum2)
	{
		printf("%d",sum2);
	}
	else
	printf("%d",sum1);
	return 0;
}
